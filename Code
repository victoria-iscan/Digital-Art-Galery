let s = 40

function setup(){
	createCanvas (500,500)
	keyPressed ();
	background(0);
}

function draw(){
	keyPressed ();

	//lines
  line (0,0,width,height);
	stroke (150)
  line (width,0,0,height);
	stroke (150)
	
	//rectangle in the center
  rectMode(CENTER);
  rect(250,250,s)
	strokeWeight(2)
	fill(0);
}
  
 function keyPressed() {
    if (keyIsDown(UP_ARROW)) {
		s = s + 1
		}
		
		else if (keyIsDown(DOWN_ARROW)) {
			clear ();
    s = s - 1
		}}
